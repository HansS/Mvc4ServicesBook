<?xml version="1.0" encoding="utf-8"?>
<hibernate-mapping xmlns="urn:nhibernate-mapping-2.2"
               namespace="MVC4ServicesBook.Data.Model"
               assembly="MVC4ServicesBook.Data"
               schema="dbo" >
    
    <class name="User" table="User">

        <id name="UserId" type="Guid" />

        <version name="Timestamp" generated="always" unsaved-value="null" type="BinaryBlob" >
          <column name="ts" not-null="true" sql-type="rowversion"/>
        </version>
  
        <property name="Firstname" not-null="true" type="string" />
        <property name="Lastname" not-null="true" type="string" />

    </class>
    
</hibernate-mapping>